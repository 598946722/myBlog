	    <aside>
	    	<h3>归档</h3>
	    	<ul>
	    		{{#each list}}
					<li><a href="">{{artDate}}</a></li>					
				{{/each}}
	    	</ul>
	    	<div class="loginNow fr">
	    		立即登录
	    	</div>
			<div class="registerNow fl">
	    		立即注册
	    	</div>
			<br>
			<div class="writeNow fl">我要发布</div>
	    </aside>
		<div class="content">
		    <ul class="artList">
		        {{#each list}}
				<li>
					<a class="img" href="/article/?search={{artTit}}">
					{{#if artPic}}
						<img src="{{artPic}}" alt="{{artTit}}">
					{{else}}
						<img src="images/upload/test.png" alt="{{artTit}}">
					{{/if}}
					</a>	
					<div class="artDetail">
						<h4 class="artTit">{{artTit}}</h4>
						<span class="des">
							{{{artDes}}}...&nbsp;&nbsp;<a class="mores" href="/article/?search={{artTit}}">[查看全文]</a>
						</span>
						{{!-- <span class="artCon" style='display:none;'>{{{artCon}}}</span> --}}
						<div class="aboutArt">
							<span>作者：{{artAuthor}}</span>&nbsp;&nbsp;
							<span>发表时间：{{artDate}}</span>&nbsp;&nbsp;
							<span>阅读量：{{artCount}}</span>
						</div>
					</div>																	
				</li>
				{{/each}}
	
			</ul>	
			
			<div class="page">
				<button class="prev">上一页</button>
				<ul>
				    
				    {{#each pages}}
					    <li><a href="/?page={{this}}">{{this}}</a></li>
					{{/each}}

				</ul>
				<button class="next">下一页</button>
				<span>跳转到第</span>
				<div class="inp">
					<input type="text" placeholder="1" class="pagenum">
				</div>
				<span>页</span>
				<button class="loadPage">确定</button>
			</div>										
		</div>	
		<script src="js/page.js"></script>								



